{
  "name": "react-advanced-filter",
  "version": "1.0.0-beta",
  "description": "A component that filters item results for Smarter Balanced.",
  "main": "index.js",
  "files": ["/build"],
  "scripts": {
    "test": "./node_modules/.bin/jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build-ts": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osu-cass/react-advanced-filter.git"
  },
  "authors": [
    "Dan Van Horn (danvanhorn)",
    "Kevin Turkington (zainkai)"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/osu-cass/react-advanced-filter/issues"
  },
  "homepage": "https://github.com/osu-cass/react-advanced-filter#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/addon-storyshots": "^3.2.12",
    "@storybook/addons": "^3.2.12",
    "@storybook/channels": "^3.2.12",
    "@storybook/cli": "^3.2.12",
    "@storybook/react": "^3.2.12",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.34",
    "@types/react": "^16.0.10",
    "@types/react-dom": "^16.0.1",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.5",
    "awesome-typescript-loader": "^3.2.3",
    "babel-core": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "jest": "^21.2.1",
    "react-test-renderer": "^16.0.0",
    "ts-jest": "^21.1.2",
    "typescript": "^2.5.3",
    "react": "16.0.0",
    "react-dom": "16.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/stories/.*(test)\\.(js|ts|tsx?)$",
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "!src/**/__tests__/*",
      "!src/index.tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      },
      "babelConfig": {
        "presets": [
          "env",
          "react"
        ],
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "json",
      "js",
      "jsx"
    ]
  }
}
