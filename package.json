{
  "name": "@osu-cass/sb-components",
  "version": "0.0.4-beta",
  "description": "Shared components for Smarter Balanced",
  "main": "./src/index",
  "files": [
    "*"
  ],
  "types": "./src/index.d.ts",
  "scripts": {
    "test": "./node_modules/.bin/jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "generate-types": "node generateTypes.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osu-cass/sb-components.git"
  },
  "authors": [
    "Dan Van Horn (danvanhorn)",
    "Kevin Turkington (zainkai)"
  ],
  "license": "MPL",
  "bugs": {
    "url": "https://github.com/osu-cass/sb-components/issues"
  },
  "homepage": "https://github.com/osu-cass/sb-components#readme",
  "devDependencies": {
    "@osu-cass/smarter-balanced-styles": "^1.0.5",
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/addon-storyshots": "^3.2.12",
    "@storybook/addons": "^3.2.12",
    "@storybook/channels": "^3.2.12",
    "@storybook/cli": "~3.2.12",
    "@storybook/react": "~3.2.12",
    "@types/bootstrap": "3.3.32",
    "@types/google.analytics": "0.0.29",
    "@types/jest": "~21.1.2",
    "@types/jquery": "2.0.40",
    "@types/node": "~8.0.34",
    "@types/react": "~16.0.10",
    "@types/react-dom": "~16.0.1",
    "@types/react-router": "4.0.12",
    "@types/react-router-dom": "4.0.5",
    "@types/storybook__addon-actions": "~3.0.1",
    "@types/storybook__react": "~3.0.5",
    "awesome-typescript-loader": "~3.2.3",
    "babel-cli": "~6.26.0",
    "babel-core": "~6.26.0",
    "babel-polyfill": "~6.26.0",
    "babel-preset-env": "~1.6.1",
    "babel-preset-react": "~6.24.1",
    "babel-runtime": "~6.26.0",
    "bootstrap": "3.3.7",
    "css-loader": "~0.28.7",
    "font-awesome": "~4.7.0",
    "identity-obj-proxy": "~3.0.0",
    "jest": "~21.2.1",
    "jest-cli": "~21.2.1",
    "jquery": "3.2.1",
    "less": "~2.7.3",
    "less-loader": "~4.0.5",
    "postcss-loader": "~2.0.8",
    "react": "~16.0.0",
    "react-dom": "~16.0.0",
    "react-router-dom": "4.1.1",
    "react-test-renderer": "~16.0.0",
    "style-loader": "~0.19.0",
    "ts-jest": "~21.1.2",
    "typescript": "~2.5.3",
    "webpack": "~3.8.1",
    "url-loader": "0.5.9",
    "dts-generator": "^2.1.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/stories/.*(test)\\.(js|ts|tsx?)$",
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "!src/**/__tests__/*",
      "!src/index.tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      },
      "babelConfig": {
        "presets": [
          "env",
          "react"
        ],
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "json",
      "js",
      "jsx"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "identity-obj-proxy",
      "^.+\\.(ico|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js"
    }
  }
}
